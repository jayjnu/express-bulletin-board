extends layout

block content
    h2.title-login Signup
    div.wrap-form
        form.form-login(action="/signup" method="post")
            fieldset user information
            label.label-input-id(for="userId")
            input#userId(type="text" value="" name="userId" placeholder="Enter user ID")
            label.label-input-pass(for="userPass")
            input#userPass(type="password" value="" name="userPass" placeholder="Enter Password")
            input(type="submit" value="login")
